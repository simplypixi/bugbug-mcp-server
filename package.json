{
  "name": "bugbug-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol server for BugBug functionality",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "NODE_ENV=development node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "inspect:local": "npm run build && npx -y @modelcontextprotocol/inspector node dist/index.js",
    "inspect:dev": "npm run build && NODE_ENV=development npx -y @modelcontextprotocol/inspector node dist/index.js",
    "inspect:prod": "npm run build && NODE_ENV=production npx -y @modelcontextprotocol/inspector node dist/index.js",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "server",
    "typescript",
    "bugbug",
    "testing",
    "automation"
  ],
  "author": "Mariusz WÃ³jcik",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simplypixi/bugbug-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/simplypixi/bugbug-mcp-server/issues"
  },
  "homepage": "https://github.com/simplypixi/bugbug-mcp-server#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@sentry/node": "^7.0.0",
    "dotenv": "^16.6.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "nock": "^14.0.9",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}